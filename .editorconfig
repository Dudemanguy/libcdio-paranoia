# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org
# See https://editorconfig.org

# top-most EditorConfig file
root = true

[*.[ch]]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Makefiles
[{Makefile,*.mk}]
indent_size = 8
indent_style = tab
